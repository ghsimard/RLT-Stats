{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types", "./src/types.d.ts"],
    "types": ["node", "express", "pg", "pdfkit", "cors"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 